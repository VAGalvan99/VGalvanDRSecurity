@model ML.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href=~/css/bootswatchTheme.css/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <br />
            <br />
            <br />
            <br />
            <br />
            <div class="px-5 ms-xl-4">
                <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                <span class="h1 fw-bold mb-0">Inicio de Sesión</span>
            </div>

            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data", style = "width: 23rem;" }))
                {
                    <div class="form-outline mb-4">
                        @Html.TextBoxFor(model => model.Usuario1, new { @class = "form-control form-control-lg", @id = "form2Example18", @name="usuario" })
                        <label class="form-label" for="form2Example18">Usuario</label>
                    </div>

                    <div class="form-outline mb-4">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control form-control-lg", @id = "form2Example28", @name="password" })
                        <label class="form-label" for="form2Example28">Password</label>
                    </div>

                    <div class="pt-1 mb-4">
                        <input type="submit" value="Iniciar Sesión" class="btn btn-info btn-lg btn-block" />
                    </div>
                }
            </div>

        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
            <img src="~/Images/Login2.gif"
                 alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
        </div>
    </div>
</div>
